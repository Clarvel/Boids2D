

class FoodEmmiter extends Circle
{
  float maxradius;
  
  FoodEmmiter(PVector pos, float radius, color col , float maxradius)
  {
      super(pos, radius, color(255, 255, 255));
      this.maxradius = maxradius;
      this.radius = radius;
  }

  void emit()
  {
    if (radius > 0)
    {
      radius--;
    }
    
    if ((int)radius == 0)
    { 
      float randomX, randomY , randomR;
      randomR = random(maxradius);
      randomX = random(1024);
      randomY = random(768);
      pos.x = randomX;
      pos.y = randomY;
      radius = randomR;
 
    }
  
  }
  




}